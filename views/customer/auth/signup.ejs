<%- include('../includes/head', { pageTitle: 'Signup' }) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>

<body>
    <%- include('../includes/header') %>
    <main>
        <h1>Create New Account</h1>
        <p><%=(typeof alertMsg!='undefined')? alertMsg:''%></p>
        <form action="/signup" method="POST">
            <!-- <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>"> -->
            <p>
                <label for="email">E-Mail</label>
                <input type="email" id="email" name="email" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" minlength="4" required>
            </p>
            <p>
                <label for="confirm_password">Confirm Password</label>
                <input type="password" id="confirm_password" name="confirm_password" minlength="4" required>
            </p>
            <hr>
            <p>
                <label for="fullname">Full Name</label>
                <input type="text" id="fullname" name="fullname" required>
            </p>
            <p>
                <label for="contact">Contact</label>
                <input type="tel" id="contact" name="contact" minlength="10" maxlength="10" required>
            </p>
            <p>
                <label for="address">Address</label>
                <input type="text" id="address" name="address" required>
            </p>
            <p>
                <label for="pincode">Pin Code</label>
                <input type="text" id="pincode" name="pincode" minlength="6" maxlength="6" required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" id="city" name="city" required>
            </p>
            <p>
                <label for="state">State</label>
                <input type="text" id="State" name="state" required>
            </p>
            <button class="btn">Create Account</button>
            <p id="switch-form"><a href="/login">Login instead</a></p>
        </form>
    </main>
    <%- include('../includes/footer') %>